{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        "profile": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid"
        },
        "personal": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid"
        },
        "business": {
          "$businessId": {
            ".read": "$uid === auth.uid",
            ".write": "$uid === auth.uid",
            "jobs": {
              "$jobId": {
                ".read": "$uid === auth.uid",
                ".write": "$uid === auth.uid",
                "applicants": {
                  "$userId": {
                    ".read": "$uid === auth.uid",
                    ".write": "$uid === auth.uid"
                  }
                }
              }
            },
            "privacy": {
              ".read": "auth != null"
            }
          }
        },
        "businessPrivacy": {
          "$businessId": {
            ".read": "auth != null",
            ".write": false
          }
        },
        "jobs": {
          "applied": {
            "$jobId": {
              ".read": "auth != null && auth.uid === $uid",
              ".write": "auth != null && auth.uid === $uid"
            }
          }
        },
        "notifications": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null && auth.uid === $uid",
          "$notificationId": {
            ".write": "auth != null && (auth.uid === $uid || (newData.child('type').val() == 'job_application' || newData.child('type').val() == 'job_accepted' || newData.child('type').val() == 'job_completed' || newData.child('type').val() == 'job_auto_closed'))"
          }
        }
      }
    },
    "public": {
      "jobs": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$jobId": {
          ".read": "auth != null",
          ".write": "auth != null",
          "jobApplications": {
            "$userId": {
              ".read": "auth != null",
              ".write": "auth != null"
            }
          }
        }
      },
      "businesses": {
        "$businessId": {
          ".read": "auth != null",
          ".write": false
        }
      }
    },
    "usernames": {
      ".read": "auth != null",
      "$username": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "events": {
      "$eventId": {
        ".read": "auth != null",
        ".write": "auth != null && data.child('organizerId').val() === auth.uid"
      }
    },
    "applications": {
      "$appId": {
        ".read": "auth != null && (data.child('userId').val() === auth.uid || root.child('events').child(data.child('eventId').val()).child('organizerId').val() === auth.uid)",
        ".write": "auth != null && newData.child('userId').val() === auth.uid"
      }
    }
  }
}
