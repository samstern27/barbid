{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "public": {
      "jobs": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$jobId": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },
    "usernames": {
      "$username": {
        ".read": "auth != null",
        ".write": "auth != null && (!data.exists() || data.val() === auth.uid)"
      }
    },
    "events": {
      "$eventId": {
        ".read": "auth != null",
        ".write": "auth != null && data.child('organizerId').val() === auth.uid"
      }
    },
    "applications": {
      "$appId": {
        ".read": "auth != null && (data.child('userId').val() === auth.uid || root.child('events').child(data.child('eventId').val()).child('organizerId').val() === auth.uid)",
        ".write": "auth != null && newData.child('userId').val() === auth.uid"
      }
    }
  }
}
